.container
  height: 100%

.flex
  display: flex
  flex-flow: row wrap
  justify-content: space-around
  height: 100%

  .col
    height: 100%
    overflow-y: scroll
    background: rgb(250, 250, 250)
    &.caption
      width: 30%
    &.image
      width: 70%

.flex.portrait
  .col
    &.caption
      width: 40%
    &.image
      width: 60%

.flex.landscape.short
  .col
    height: auto
    &.caption
      width: 100%
      order: 2
    &.image
      width: 100%
      max-height: 80%
      order: 1

.full-width
  width: 100%

.fill-img
  background: no-repeat center center fixed
  background-size: cover
  width: 100%
  min-height: 100vh

.text-container
  padding: 0 4%

h1
  position: absolute
  top: 2%
  right: 2%
  padding: 1%
  background: rgba(230,230,230, 0.5)

.short
  font-size: 1.4em
  .caption
    display: flex
    align-items: center


@media all and (max-width: 800px)
  .flex, .flex.portrait
    .col
      height: auto
      &.caption
        width: 100%
        order: 2
      &.image
        width: 100%
        order: 1

  .fill-img
    background-size: 100% auto
    background-position: top
